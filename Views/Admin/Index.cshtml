@model IEnumerable<Blog.Models.Post>

@{   
    /**/
    ViewBag.Title = "My Blog";
}

<p>
    <h3>@Html.ActionLink("Add New Post", "Create")</h3>
</p>

<h2>Posts</h2>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-1">
            <p>@Html.DisplayFor(modelItem => item.Date)</p>
        </div>

        <div class="col-md-5">
            <a href="@Url.Action("Details")">
                <img class="img-responsive" src="@Html.DisplayFor(modelItem => item.ImageUrl)">
            </a>
        </div>

        <div class="col-md-6">
            <h3>
                <a href="@Url.Action("Details")">@Html.DisplayFor(modelItem => item.Title)</a>
            </h3>
            <p>
                by <a href="#">@Html.DisplayFor(modelItem => item.Author)</a>
            </p>
            <p class="content">@item.Content.Substring(0, 400)</p>
            <a href="@Url.Action("Details", new { id = item.ID})" class="btn btn-primary">Read More <i class="fa fa-angle-right"></i></a>
        </div>
    </div>
    <hr />
}