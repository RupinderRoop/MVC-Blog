@model Blog.Models.Post

@{
    ViewBag.Title = "";
}

<h2>Post</h2>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @Html.DisplayFor(model => model.Title)
        </h1>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="active">@Html.DisplayFor(model => model.Title)</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-8">
        <!-- the actual blog post: title/author/date/content -->
        <hr>
        <p>
            <i class="fa fa-clock-o"></i> Posted on @Html.DisplayFor(model => model.Date) by <a href="#">@Html.DisplayFor(model => model.Author)</a>
        </p>
        <hr />
        <img class="img-responsive" src="@Html.DisplayFor(model => model.ImageUrl)" width="900" height="300">
        <hr />
        <p>@Html.DisplayFor(model => model.Content)</p><br />
    

        <a href="@Url.Action("Edit", new { id = Model.ID})" class="btn btn-primary">Edit<i class="fa fa-angle-right"></i></a>
        <a href="@Url.Action("Delete", new { id = Model.ID})" class="btn btn-primary">Delete<i class="fa fa-angle-right"></i></a>
        <hr />

        <!-- the comment box -->
        <div class="comment">
            <h4>Leave a Comment:</h4>
            <form role="form">
                <div class="form-group">
                    <textarea rows="3" class="form-control"></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
        </div>
        <hr>
    </div>
</div>
